{
  "name": "secure-telegram-bot",
  "version": "2.0.0",
  "description": "Enhanced Telegram bot with maximum security",
  "main": "main.py",
  "scripts": {
    "start": "python main.py"
  },
  "runtime": "python3.11",
  "buildCommand": "pip install -r requirements.txt",
